<div class="d-flex full-screen-container-index">
  <!-- flats -->
  <div class="left-container">
    <div class="search-results">
      <h3>This will be search result</h3>
      <h1>Stays in search result city</h1>
      <h2>filter options</h2>
    </div>
    <div class="index-flat-cards">
      <% @flats.each do |flat| %>
        <div class="index-flat-card">
          <div class="index-card-details">
            <div>
              <h2 class = "small-light-grey-text"><%= flat.flat_type %></h2>
              <h2 class = "flat-title-index"><%= flat.title %></h2>
              <h2 class = "small-light-grey-text"><%= flat.bedrooms %> bedrooms - <%= flat.bathrooms %> baths</h2>
            </div>
            <div class="index-flat-card-pricing">
              <div class = "flat-price"><strong>$<%= flat.price %></strong> / night</div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- map -->
  <div class="right-container">

  </div>
</div>
